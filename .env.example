# Marduk Cognitive Tokamak - Environment Variables

# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/marduk-tokamak
POSTGRES_URI=postgresql://postgres:password@localhost:5432/marduk-tokamak

# LLM Configuration
MODEL_PATH=models/checkpoints/subspace-marduk-latest
EMBEDDING_MODEL=text-embedding-ada-002

# Storage Configuration
MEMORY_DIR=memory/atoms
MODEL_DIR=models/checkpoints
BOLT_DIR=bolt/experiments
CHECKPOINT_DIR=checkpoints
BACKUP_DIR=backups

# Backup Configuration
S3_BUCKET=marduk-tokamak-backups
S3_REGION=us-west-2

# Logging Configuration
LOG_LEVEL=info